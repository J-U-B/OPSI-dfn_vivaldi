[Package]
version: 7
depends: 
incremental: False

[Product]
type: localboot
id: {{TESTPREFIX}}{{ORGPREFIX}}vivaldi
name: Vivaldi
description: A Browser for Our Friends (JÃ³n S. von Tetzchner)
 Recommended replacement for Opera
 WebSite: https://vivaldi.com/
 changelog: https://vivaldi.com/blog/minor-update-to-vivaldi-1-10-2/
advice: Maintainer: Jens Boettge <boettge@mpi-halle.mpg.de>
Organization: {{ORGNAME}}
Release date: 2017-07-14
version: 1.10.867.48
priority: 0
licenseRequired: False
productClasses: web & mail
setupScript: setup.opsiscript
uninstallScript: uninstall.opsiscript
updateScript: 
alwaysScript: 
onceScript: 
customScript: 
userLoginScript: 

[ProductProperty]
type: bool
name: kill_running
description: kill running instance (for software on_demand)
default: False

[ProductProperty]
type: unicode
name: install_architecture
multivalue: False
editable: False
description: which architecture (32/64 bit) should be installed
values: ["32 bit", "64 bit", "sysnative"]
default: ["64 bit"]

;[ProductProperty]
;type: unicode
;name: default_language
;multivalue: False
;editable: False
;description: application default language (currently unused!)
;values: ["de", "en-GB", "en-US"]
;default: ["en-US"]

[ProductProperty]
type: bool
name: desktoplink
description: generate or delete DesktopLink
default: False

[ProductProperty]
type: unicode
name: custom_post_install
multivalue: False
editable: True
description: Define filename for include script in custom directory after installation
values: ["none", "post-install.opsiinc"]
default: ["none"]

[ProductProperty]
type: unicode
name: custom_post_uninstall
multivalue: False
editable: True
description: Define filename for include script in custom directory after deinstallation
values: ["none", "post-uninstall.opsiinc"]
default: ["none"]

[ProductProperty]
type: unicode
name: log_level
multivalue: False
editable: False
description: Loglevel for this package
values: ["default", "1", "2", "3", "4", "5", "6", "7", "8", "9"]
default: ["default"]


